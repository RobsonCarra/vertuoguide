<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ProfileFragment"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <TextView
          android:id="@+id/inventory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="perfil"
          android:textColor="#58D697"
          android:textSize="28sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />


      <Button
          android:id="@+id/notifications"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="56dp"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="Notificações"
          android:textAllCaps="false"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/camera_button"
          style="@style/Widget.AppCompat.Button.Borderless"
          />

      <Button
          android:id="@+id/share"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="Compartilhar"
          android:textAllCaps="false"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/notifications"
          app:layout_constraintTop_toBottomOf="@+id/notifications"
          style="@style/Widget.AppCompat.Button.Borderless"
          />

      <Button
          android:id="@+id/rate"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="Fazer uma avaliação"
          android:textAllCaps="false"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="@+id/share"
          app:layout_constraintTop_toBottomOf="@+id/share"
          style="@style/Widget.AppCompat.Button.Borderless"
          />

      <TextView
          android:id="@+id/terms_of_use"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="Políticas e termos"
          android:textAllCaps="false"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="@+id/rate"
          app:layout_constraintTop_toBottomOf="@+id/rate"
          style="@style/Widget.AppCompat.Button.Borderless"
          />

      <Button
          android:id="@+id/exit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="32dp"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="Sair"
          android:textAllCaps="false"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="@+id/terms_of_use"
          app:layout_constraintTop_toBottomOf="@+id/terms_of_use"
          style="@style/Widget.AppCompat.Button.Borderless"
          />

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/camera_button"
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:layout_marginTop="40dp"
          android:background="@drawable/round_button"
          android:src="@drawable/photo_foreground"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/inventory"
          ></de.hdodenhof.circleimageview.CircleImageView>
      <Switch
          android:id="@+id/notificationsSwitch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="24dp"
          app:layout_constraintBottom_toBottomOf="@+id/notifications"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toEndOf="@+id/notifications"
          app:layout_constraintTop_toTopOf="@+id/notifications"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>