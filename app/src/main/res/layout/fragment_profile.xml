<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ProfileFragment"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <TextView
          android:id="@+id/inventory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="24dp"
          android:layout_marginStart="24dp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="profile"
          android:textColor="#58D697"
          android:textSize="28sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />


      <TextView
          android:id="@+id/notifications"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="4dp"
          android:layout_marginStart="4dp"
          android:layout_marginTop="56dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="Notifications"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/inventory"
          app:layout_constraintTop_toBottomOf="@+id/camera_button"
          />

      <TextView
          android:id="@+id/share"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="Share"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/notifications"
          app:layout_constraintTop_toBottomOf="@+id/notifications"
          />

      <TextView
          android:id="@+id/rate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="Rate"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/share"
          app:layout_constraintTop_toBottomOf="@+id/share"
          />

      <TextView
          android:id="@+id/terms_of_use"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="Terms of use"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/rate"
          app:layout_constraintTop_toBottomOf="@+id/rate"
          />

      <TextView
          android:id="@+id/exit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="32dp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="Exit"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="@+id/terms_of_use"
          app:layout_constraintTop_toBottomOf="@+id/terms_of_use"
          />

      <TextView
          android:id="@+id/on"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="24dp"
          android:layout_marginRight="24dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="LIGADO"
          android:textColor="#58D697"
          android:textSize="10sp"
          app:layout_constraintBottom_toBottomOf="@+id/off"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="@+id/off"
          />

      <TextView
          android:id="@+id/off"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:layout_marginRight="8dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="DESLIGADO"
          android:textColor="#e5e5e5"
          android:textSize="10sp"
          app:layout_constraintBottom_toBottomOf="@+id/notifications"
          app:layout_constraintEnd_toStartOf="@+id/on"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toEndOf="@+id/notifications"
          app:layout_constraintTop_toTopOf="@+id/notifications"
          />

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/camera_button"
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:layout_marginTop="40dp"
          android:background="@drawable/round_button"
          android:src="@drawable/photo_foreground"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/inventory"
          ></de.hdodenhof.circleimageview.CircleImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>