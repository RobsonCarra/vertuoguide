<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".presentation.ProfileFragment"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <Button
          android:id="@+id/notifications"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="226dp"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="@string/notifications"
          android:textAllCaps="false"
          android:textColor="@color/black"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/perfil"
          style="@style/Widget.AppCompat.Button.Borderless"
          />


      <Button
          android:id="@+id/share"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="@string/share"
          android:textAllCaps="false"
          android:textColor="@color/black"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/notifications"
          style="@style/Widget.AppCompat.Button.Borderless"
          />
      <Button
          android:id="@+id/rate"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="@string/make_an_assessment"
          android:textAllCaps="false"
          android:textColor="@color/black"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/share"
          style="@style/Widget.AppCompat.Button.Borderless"
          />

      <Button
          android:id="@+id/exit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="189dp"
          android:layout_marginEnd="16dp"
          android:layout_marginStart="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="@string/exit"
          android:textAllCaps="false"
          android:textColor="@color/black"
          android:textSize="16sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/to_do_list_button"
          style="@style/Widget.AppCompat.Button.Borderless"
          />

      <ProgressBar
          android:id="@+id/progress_bar_perfil_fragment"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_marginTop="56dp"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.498"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/perfil"
          />
      <Switch
          android:id="@+id/notificationsSwitch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="24dp"
          app:layout_constraintBottom_toBottomOf="@+id/notifications"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toEndOf="@+id/notifications"
          app:layout_constraintTop_toTopOf="@+id/notifications"
          />
      <TextView
          android:id="@+id/terms_of_use"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="@string/politics_and_terms"
          android:textAllCaps="false"
          android:textColor="@color/black"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/rate"
          style="@style/Widget.AppCompat.Button.Borderless"
          />
      <TextView
          android:id="@+id/to_do_list_button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:gravity="center|start"
          android:text="@string/to_do_list"
          android:textAllCaps="false"
          android:textColor="@color/black"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/terms_of_use"
          style="@style/Widget.AppCompat.Button.Borderless"
          />
      <TextView
          android:id="@+id/perfil"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="@string/perfil"
          android:textColor="@color/green_100"
          android:textSize="28sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/camera_button"
          android:layout_width="140dp"
          android:layout_height="140dp"
          android:layout_marginTop="40dp"
          android:background="@drawable/round_button"
          android:src="@drawable/photo_foreground"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/perfil"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>