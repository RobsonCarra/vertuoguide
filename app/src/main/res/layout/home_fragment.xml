<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.DashboardActivity"
    >

  <Button
      android:id="@+id/coffe_now_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:fontFamily="@font/nunito_extrabold"
      android:text="Coffee now"
      android:textAllCaps="false"
      android:textColor="#000000"
      app:layout_constraintBottom_toBottomOf="@+id/app_name"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/app_name"
      app:backgroundTint="#FFFFFF"
      style="?android:attr/borderlessButtonStyle"
      />


  <Button
      android:id="@+id/add_coffees_btn"
      android:layout_width="wrap_content"
      android:layout_height="60dp"
      android:fontFamily="@font/nunito_extrabold"
      android:paddingLeft="24dp"
      android:paddingRight="24dp"
      android:text="@string/add_coffee"
      android:textAllCaps="false"
      android:textSize="14sp"
      android:visibility="gone"
      app:cornerRadius="40dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/add_coffee_msg"
      app:layout_constraintVertical_bias="0.06999999"
      />

  <ImageView
      android:id="@+id/app_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="24dp"
      android:layout_marginStart="24dp"
      android:layout_marginTop="24dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/vertuoguidelogo"
      />

  <ProgressBar
      android:id="@+id/progress"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="@+id/coffe_list_recyclerview"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/add_coffee_msg"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/nunito"
      android:text="Nenhum cafÃ© foi encontrado"
      android:textColor="@color/black"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.39"
      />
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/coffe_list_recyclerview"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="2dp"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/coffe_now_button"
      tools:itemCount="3"
      tools:listitem="@layout/coffe_item_list"
      />

</androidx.constraintlayout.widget.ConstraintLayout>