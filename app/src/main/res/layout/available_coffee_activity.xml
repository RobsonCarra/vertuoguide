<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".presentation.DashboardActivity"
    >
  <Button
      android:id="@+id/add_coffees_btn"
      android:layout_width="wrap_content"
      android:layout_height="60dp"
      android:fontFamily="@font/nunito_extrabold"
      android:paddingLeft="24dp"
      android:paddingRight="24dp"
      android:text="@string/add_coffee"
      android:textAllCaps="false"
      android:textSize="14sp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/add_coffee_msg"
      app:layout_constraintVertical_bias="0.06999999"
      app:cornerRadius="40dp"
      />

  <ProgressBar
      android:id="@+id/progress"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="@+id/coffe_list_recyclerview"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/inventory"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="60dp"
      android:fontFamily="@font/nunito_extrabold"
      android:text="@string/available_coffees"
      android:textColor="#58D697"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="@+id/coffe_toolbar_add_coffee"
      app:layout_constraintStart_toStartOf="@+id/coffe_toolbar_add_coffee"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/add_coffee_msg"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/nunito"
      android:text="Nenhum cafÃ© foi encontrado"
      android:textColor="@color/black"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.39"
      />
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/coffe_toolbar_add_coffee"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:elevation="2dp"
      android:theme="@style/ToolbarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
      app:title=" "
      app:titleTextColor="@color/black"
      />
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/coffe_list_recyclerview"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="2dp"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/name_coffee"
      tools:itemCount="3"
      tools:listitem="@layout/available_coffee_item_list"
      />
  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/name_coffee"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/coffe_toolbar_add_coffee"
      app:boxCornerRadiusBottomEnd="10dp"
      app:boxCornerRadiusBottomStart="10dp"
      app:boxCornerRadiusTopEnd="10dp"
      app:boxCornerRadiusTopStart="10dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/put_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="search"
        android:fontFamily="@font/nunito"
        android:hint="Search"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14dp"
        />
  </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>