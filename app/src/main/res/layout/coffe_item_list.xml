<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

  <androidx.cardview.widget.CardView

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="16dp"
      app:cardBackgroundColor="#FFFFFF"
      app:cardCornerRadius="10dp"
      app:cardElevation="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ImageView
          android:id="@+id/coffeImagetype"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:scaleType="centerCrop"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@mipmap/coffe_foreground" />

      <TextView
          android:id="@+id/CoffeType"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="CoffeType"
          android:textColor="#000000"
          android:textSize="20sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/coffeImagetype" />

      <TextView
          android:id="@+id/CoffeAvailableQuantity"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/nunito"
          android:text="Available Capsules"
          android:textSize="12sp"
          app:layout_constraintStart_toStartOf="@+id/CoffeType"
          app:layout_constraintTop_toBottomOf="@+id/CoffeType" />

      <TextView
          android:id="@+id/CoffeDescription"
          android:layout_width="match_parent"
          android:layout_height="161dp"
          android:layout_marginStart="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:fontFamily="@font/nunito"
          android:text="Coffe Description"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/CoffeAvailableQuantity" />

      <TextView
          android:id="@+id/NumberIntensity"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="Intensity Scale"
          android:textColor="#070707"
          android:textSize="20sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="@+id/CoffeIntensity"
          app:layout_constraintStart_toStartOf="@+id/CoffeIntensity"
          app:layout_constraintTop_toBottomOf="@+id/CoffeDescription" />

      <TextView
          android:id="@+id/QtdCoffe"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="Quantidade"
          android:textColor="#070707"
          android:textSize="20sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/CoffeSize" />

      <TextView
          android:id="@+id/CoffeIntensity"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="Intensidade"
          android:textColor="#040404"
          android:textSize="20sp"
          android:textStyle="bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/NumberIntensity" />

      <TextView
          android:id="@+id/CoffeSize"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/nunito_extrabold"
          android:text="CoffeSize"
          android:textColor="#040404"
          android:textSize="20sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="@+id/QtdCoffe"
          app:layout_constraintStart_toStartOf="@+id/QtdCoffe"
          app:layout_constraintTop_toBottomOf="@+id/CoffeDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>