<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.alura.ceep.ui.coffemachine">

  <application
      android:name=".CoffeesApplication"
      android:allowBackup="true"
      android:fullBackupContent="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/Theme.CoffeeMachine.Machine"
      android:usesCleartextTraffic="true">
    <activity android:name=".presentation.DashboardActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <!--                <category android:name="android.intent.category.LAUNCHER" />-->
        <action android:name="com.google.firebase.MESSAGING_EVENT" />
      </intent-filter>
    </activity>
    <activity android:name=".presentation.RegisterActivity"></activity>
    <activity android:name=".presentation.AvailableActivity"></activity>
    <activity android:name=".presentation.DrinkNowActivity"></activity>
    <activity android:name=".presentation.AddActivity"></activity>
    <activity android:name=".presentation.Login.view.LoginActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <action android:name="com.google.firebase.MESSAGING_EVENT" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <meta-data
        android:name="preloaded_fonts"
        android:resource="@array/preloaded_fonts" />
  </application>
  <uses-permission android:name="android.permission.INTERNET" />
</manifest>